- content_for 'page_css' do
  :sass
    div.biography
      margin: 5px 20px
      color: #444

    #content .form-area div.error-with-field
      font-family: Georgia,Palatino,"Times New Roman",Times,serif
      font-size: 200%
      width: 100%

    input.textbox
      width: 300px

    input.textbox-short
      width: 40px

    input.textbox-long
      width: 500px

    textarea.textarea-small
      height: 75px !important
      width: 100%
      display: block

    textarea.textarea-large
      height: 150px !important
      width: 100%
      display: block

    input.file
      margin: 50px 0

    img.photo
      margin: 5px 0
      border: 2px solid #fff


%h1= @profile.new_record? ? 'New Staff Profile' : 'Edit Staff Profile'

- form_for_profile @profile do |f|
  .form-area
    %table
      %tr
        %td
          %label First Name (required)
        %td
          %label M.I.
        %td
          %label Last Name (required)
      %tr
        %td
          = f.text_field :first_name, :class => 'textbox'
        %td
          = f.text_field :middle_initial, :class => 'textbox-short'
        %td
          = f.text_field :last_name, :class => 'textbox'
      = render :partial => "shared/fields"
  %p.buttons
    - button_text = @profile.new_record? ? 'Create' : 'Save Changes'
    = submit_tag button_text, :class => 'button'
    or
    = link_to 'Cancel', admin_profiles_url
