%table
  %tr
    %td
      %label Position Type (required) = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "position", target => "_blank"
  %tr
    %td
      = f.collection_select :position_type_id, PositionType.find_all, :id, :name, { :include_blank => true }, :class => 'selectbox'
  %tr
    %td
      %label Username (required)
  %tr
    %td
      = f.text_field :login, :class => 'textbox'
%table
  - if change_password?
    %tr
      %td
        %label PASSWORD CHANGE REQUIRED
  %tr
    %td
      %label New Password
    %td
      %label Confirm Password
  %tr
    %td
      = f.password_field :password, :class => 'textbox', :value => ""
    %td
      = f.password_field :password_confirmation, :class => 'textbox', :value => ""
%table
  %tr
    %td
      %label Degree(s)
  %tr
    %td
      = f.text_field :degree, :class => 'textbox'
  %tr
    %td
      %label Title = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "title", target => "_blank"
  %tr
    %td
      = f.text_field :title, :class => 'textbox'
  %tr
    %td
      %label Email
  %tr
    %td
      = f.text_field :email, :class => 'textbox'
  %tr
    %td
      %label Phone
  %tr
    %td
      = f.text_field :phone, :class => 'textbox'
  %tr
    %td
      %label Fax
  %tr
    %td
      = f.text_field :fax, :class => 'textbox'
  %tr
    %td
      %label Alternate Website (NOTE: Filling this out will cause your profile to redirect to the provided url) = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "alternate_web", target => "_blank"
  %tr
    %td
      = f.text_field :website, :class => 'textbox-long'
  %tr
    %td
      %label Address
  %tr
    %td
      = f.text_area :address, :class => 'textarea-small'
  %tr
    %td
      %label Biography = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "biography", target => "_blank"
  %tr
    %td
      = f.text_area :biography, :class => 'textarea-large'
  %tr
    %td
      %label Affiliations = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "affiliations", target => "_blank"
  %tr
    %td
      = f.text_area :affiliations, :class => 'textarea-small'
  %tr
    %td
      %label Research = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "research", target => "_blank"
  %tr
    %td
      = f.text_area :research, :class => 'textarea-small'
  %tr
    %td
      %label Clinical Interests = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "clinical-interests", target => "_blank"
  %tr
    %td
      = f.text_area :clinical_interests, :class => 'textarea-small'
  %tr
    %td
      %label Publications (Must be in BIBTEX format.) = link to "What Is This?", "/staff_profile_help.html" :class => "help" :anchor => "publications", target => "_blank"
  %tr
    %td
      = f.text_area :publications, :class => 'textarea-large'
  %tr
    %td
      %label Status
  %tr
    %td
      = f.collection_select :status_id, Status.find_all, :id, :name, {}, :class => 'selectbox'
  %tr
    %td
      %label Photo
  %tr
    %td
      = image_tag(@profile.photo.url(:profile), :class => 'photo')
      %br
      = f.file_field :photo, :class => 'button'
      = if @profile.new_record?
        = f.hidden_field :uuid, :value => "x_#{`uuidgen`.strip}"
